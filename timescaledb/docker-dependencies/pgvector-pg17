FROM timescale/timescaledb:latest-pg17 AS timescale-pg17

FROM timescale-pg17 AS pgvector
ARG VERSION
ARG TARGETARCH
ARG TARGETVARIANT

# --------------------------------------------
# pgVector - build and install
# --------------------------------------------
# hadolint ignore=DL3018, DL3003
RUN --mount=type=cache,id=apk-${TARGETARCH}-${TARGETVARIANT},sharing=locked,target=/var/cache/apk \
    set -ex \
    && apk update \
    && apk add --virtual .fetch-deps \
                ca-certificates \
                git \
                openssl \
                openssl-dev \
                tar \
                wget \
    && mkdir -p /build/ \
    && apk add --virtual .build-deps \
                coreutils \
                gcc \
                make \
                cmake \
				build-base \
                libxml2-dev \
                protobuf-c-dev \
                clang19 \
                llvm19 \
    && mkdir -p /build \
        && cd /build \
        && git clone --branch v${VERSION} https://github.com/pgvector/pgvector.git \
        && cd pgvector \
        && make \
        && make install \
    && cd ~ \
    && apk del .fetch-deps .build-deps \
    && rm -rf /build 


# Labels
LABEL \
    org.opencontainers.image.source="https://github.com/expaso/hassos-addon-timescaledb"
